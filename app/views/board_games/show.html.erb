<div style="margin: 50px;">
<h1><%= @board_game.name %></h1>

<p>Time duration of the game: <%= @board_game.time_duration %>min</p>

<p>Difficulty rating: <%= @board_game.difficulty %>/5</p>

<p>Rules: <%= @board_game.rules %></p>
</div>

<div class="wrapper">
    <div class="form">
        <%= form_for @game do |f| %>
            <%= f.hidden_field :user_id, value: @game.user_id %>
            <%= f.hidden_field :board_game_id, value: @game.board_game_id %>
            <%= f.label :comment, "Write a comment about your experience" %><br>
            <%= f.text_area :comment %>
            <%= submit_tag "Play this game"%>
        <% end %>
    </div>
</div>