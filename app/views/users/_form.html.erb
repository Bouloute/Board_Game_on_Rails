<div class="form">
    <%= form_for @user do |f| %>


        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2>There were some errors:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>


        <div class="field<%= 'field_with_errors' if @user.errors[:name].any? %>">
          <%= f.label :name %><br>
          <%= f.text_field :name %><br>
        </div>

        <div class="field<%= 'field_with_errors' if @user.errors[:email].any? %>">
          <%= f.label :email %><br>
          <%= f.text_field :email %><br>
        </div>

        <div class="field<%= 'field_with_errors' if @user.errors[:password].any? %>">
          <%= f.label :password %><br>
          <%= f.text_field :password %><br>
        </div>
        
        <%= f.submit "Create User" %>

      <p class="message">Already registered? <a href="/login">Sign In</a></p>
    <% end %>
    
</div>