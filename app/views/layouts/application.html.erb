<!DOCTYPE html>
<html>
  <head>
    <title>BoardGameOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="/stylesheets/styles.css">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="navigation">
      <div class="nav-container">
        <div class="brand">
          <%= display_user_or_home_page %>
        </div>
        <nav>
          <ul class="nav-list">
            <li>
              <a href="<%= users_path %>">Registered Users</a>
            </li>

            <li>
              <a href="<%= board_games_path %>">Board Games</a>
            </li>

            <li>
              <%= display_log_in_out %>
            </li>
          </ul>
        </nav>
      </div>
    </section>


    <%= yield %>
  </body>
</html>
