<div class="form">
    <%= form_for @user, url: '/login' do |f| %>


        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2>There were some errors:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>


        <div class="field<%= 'field_with_errors' if @user.errors[:name].any? %>">
          <%= f.label :name %><br>
          <%= f.text_field :name %><br>
        </div>

        <div class="field<%= 'field_with_errors' if @user.errors[:password].any? %>">
          <%= f.label :password %><br>
          <%= f.password_field :password %><br>
        </div>
        
        <%= f.submit "Log In" %>

        <p class="message">Never registered? <%= link_to "Sign Up", "/signup" %></p>
        <p class="message">Log in with <%= link_to "Github", "/auth/github" %></p>
        <% end %>
    
</div>